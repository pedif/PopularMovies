<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/detail_title">

    <TextView
        android:id="@+id/frag_detail_movie_tv_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_vertical_margin"
        tools:text="Guardian of galaxy"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/detail_img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/detail_img_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/detail_img_share"
        android:layout_toStartOf="@id/detail_img_share"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_favorite" />
</RelativeLayout>