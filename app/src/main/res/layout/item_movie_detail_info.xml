<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/frag_detail_movie_img"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minWidth="150dp"
        android:padding="@dimen/activity_vertical_margin"
        tools:src="@drawable/placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/frag_detail_movie_tv_date"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2017"
        app:layout_constraintTop_toTopOf="@+id/frag_detail_movie_img"
        app:layout_constraintLeft_toRightOf="@+id/frag_detail_movie_img"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/frag_detail_movie_tv_rate"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_detail_movie_tv_date"
        android:text="8/10"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/frag_detail_movie_img"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/frag_detail_movie_tv_date" />


    <TextView
        android:id="@+id/frag_detail_movie_tv_overview"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        tools:text="klkjfdglkaslkfgjsldkfjklhb vh jhnviDCkj dsaf alkdfsk"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/frag_detail_movie_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</android.support.constraint.ConstraintLayout>